<div class="error">
<% if @user.errors.any? %>
      <h3> <%= @user.errors.count %> error prohibited this obj from being saved:</h3>
       <% @user.errors.full_messages.each do |message| %>
           <%= message %>
       <% end %>
   <% end %>
  </div>

<div class= "body">
  <div class= "container">
    <h2> User info</h2>
    <div class="low">
	    <%= form_for(@user) do |f| %>
	    <div class="field">
		    <%= f.label :name %>
		      <%= f.text_field :name, autofocus: true, class: "name" %>
	    </div>
	      <div class="field">
	    <%= f.label :image %>
	          <%= f.attachment_field :profile_image, class: "user_image" %>
	      </div>
	          <div class="field">
	    <%= f.label :introduction %>
	     <%= f.text_area :introduction, class: "introduction" %>
	          </div>
          <br><%= f.submit "Update User" %>

        <% end %>
    </div>
   </div>
</div>

