<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar  navbar-inverse">
        <div class="container">
          <nav class="nav navbar-nav navbar-left">
            <span> Bookers</span>
          </nav>
          <nav>
             <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
              <li class="">
                <%= link_to 'Home', user_path(current_user), class: "home glyphicon glyphicon-home" %>
              </li>
              <li class="">
                <%= link_to 'User', users_path, class: "users glyphicon glyphicon-user" %>
              </li>
              <li class="">

                <%= link_to 'Books', books_path(@book), class: "books glyphicon glyphicon-book" %>
              </li>
              <li class="">
                <%= link_to 'logout', destroy_user_session_path,
                method: :delete, class: "logout glyphicon glyphicon-log-out" %>

              </li>
            <% else %>
              <li class="">
                <%= link_to 'Home', root_path(@book), class: "home glyphicon glyphicon-home" %>
              </li>
              <li class="">
                <%= link_to 'About', about_path, class: "about glyphicon glyphicon-link" %>
              </li>
              <li class="">
                <%= link_to 'sign up', new_user_registration_path,class: "sign_up glyphicon glyphicon-edit" %>
              </li>
              <li>
                <%= link_to 'login', new_user_session_path, class: "sign_in glyphicon glyphicon-log-in" %>
            <% end %>

             </ul>
          </nav>
         </div>
    </header>
　　　<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

    <%= yield %>
    <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>


  </body>
</html>
