<body>

	<% if @book.errors.any? %>
    <div id="error_explanation" class="error">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= render 'books/list', book_images: @book_images ,user: current_user, book: @book %>




      			<div class="col-xs-9">
      			<h2> Books</h2>
	      		  <table class="table table-hover table-inverse">
			        <thead>
				    	<tr>
				    		<th></th>
				    		<th> Title</th>
				    		<th> Opinion</th>
				    		<th colspan="3"></th>
				    	</tr>
				    </thead>
				    <% @books.each do |book| %>
				    <tbody>
				    	 <tr>
<!-- 				   #book_user -> book.usrに変更
 -->				    	 	<th><%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", :size =>"50x50" %></th>
				    	    <th><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></th>
				    	    <th><%= book.body %></th>
				    	 </tr>
				    </tbody>
				    <% end %>
			      </table>
			    </div>
		    </div>
		</div>
    </div>
	

</body>









